<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SET09102_2024_5.ViewModels"
             x:Class="SET09102_2024_5.Views.DataQualityPage">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Picker Title="Category" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" />
            <Picker Title="Site"     ItemsSource="{Binding Sites}" SelectedItem="{Binding SelectedSite}" />
            <DatePicker Date="{Binding FromDate}" />
            <DatePicker Date="{Binding ToDate}" />
            <Button Text="Run Checks" Command="{Binding RunChecksCommand}" />
            <!-- Summary cards: -->
            <Label Text="Missing: {Binding Missing.Count}" />
            <Label Text="Out of Range: {Binding OutOfRange.Count}" />
            <Label Text="Duplicates: {Binding Duplicates.Count}" />
            <!-- Drill-down list: -->
            <CollectionView ItemsSource="{Binding Missing}">
                <!-- define item template showing Timestamp & Parameter -->
            </CollectionView>
            <!-- Repeat CollectionView for OutOfRange & Duplicates -->
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
