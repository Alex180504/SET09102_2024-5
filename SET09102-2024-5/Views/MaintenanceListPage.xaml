<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SET09102_2024_5.Views.MaintenanceListPage"
    Title="Maintenance Tasks">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Button
      Text="New Task"
      Command="{Binding AddTaskCommand}" />

        <RefreshView
      IsRefreshing="{Binding IsBusy}"
      Command="{Binding LoadTasksCommand}">
            <CollectionView
        ItemsSource="{Binding Tasks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,5"
                   BorderColor="LightGray"
                   HasShadow="False">
                            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
                                <Label Grid.Column="0"
                       Text="{Binding Sensor.DisplayName}"
                       FontAttributes="Bold" 
                                       Padding="10"/>
                                <Label Grid.Column="1"
                        Text="{Binding Maintainer.DisplayName}"
                        FontAttributes="Bold" 
                                       Padding="10"/>        
                                <Label Grid.Column="2"
                       Text="{Binding MaintenanceDate, StringFormat='{0:G}'}"
                       HorizontalOptions="Center"
                                       Padding="10"/>
                                <Button Grid.Column="3"
                        Text="Edit"
                        Command="{Binding Source={x:Reference PageRoot}, Path=BindingContext.EditTaskCommand}"
                        CommandParameter="{Binding .}" />
                                <Button Grid.Column="4"
                        Text="Delete"
                        Command="{Binding Source={x:Reference PageRoot}, Path=BindingContext.DeleteTaskCommand}"
                        CommandParameter="{Binding .}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

    </VerticalStackLayout>
</ContentPage>
