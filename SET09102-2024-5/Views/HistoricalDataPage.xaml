<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:SET09102_2024_5.Features.HistoricalData.ViewModels"
    x:Class="SET09102_2024_5.Features.HistoricalData.HistoricalDataPage"
    Title="Historical Data">

    <ContentPage.BindingContext>
        <viewmodels:HistoricalDataViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Category Dropdown -->
            <Label Text="Select Data Type:" />
            <Picker 
                Title="Choose category"
                ItemsSource="{Binding Categories}" 
                SelectedItem="{Binding SelectedCategory}" />

            <!-- Sensor Site Dropdown -->
            <Label Text="Select Sensor Site:" />
            <Picker 
                Title="Choose sensor site"
                ItemsSource="{Binding SensorSites}" 
                SelectedItem="{Binding SelectedSensorSite}" />

            <!-- Line Chart Placeholder -->
            <Label Text="Line Chart" FontAttributes="Bold" />
            <BoxView HeightRequest="200" BackgroundColor="LightGray" CornerRadius="8" />

            <!-- Data Table -->
            <Label Text="Raw Data Table" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding DataPoints}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*" Padding="5">
                            <Label Text="{Binding Timestamp}" />
                            <Label Text="{Binding Value}" Grid.Column="1" HorizontalTextAlignment="End"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
