<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:SET09102_2024_5.Features.HistoricalData.ViewModels"
    xmlns:wv="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
    x:Class="SET09102_2024_5.Features.HistoricalData.HistoricalDataPage"
    Title="Historical Data">

    <ContentPage.BindingContext>
        <viewmodels:HistoricalDataViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Category Dropdown -->
            <Label Text="Select Data Type:" />
            <Picker 
                Title="Choose category"
                ItemsSource="{Binding Categories}" 
                SelectedItem="{Binding SelectedCategory}" />

            <!-- Sensor Site Dropdown -->
            <Label Text="Select Sensor Site:" />
            <Picker 
                Title="Choose sensor site"
                ItemsSource="{Binding SensorSites}" 
                SelectedItem="{Binding SelectedSensorSite}" />

            <wv:WebView
                x:Name="ChartWebView"
                HeightRequest="250"
                HorizontalOptions="FillAndExpand" />
            
            <!-- Data Table -->
            <Label Text="Raw Data Table" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding DataPoints}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Timestamp, StringFormat='{0:yyyy-MM-dd HH:mm:ss}'}" Grid.Column="0"/>
                            
                            <Label Text="{Binding Value1}" Grid.Column="1"/>
                            <Label Text="{Binding Value2}" Grid.Column="2"/>
                            <Label Text="{Binding Value3}" Grid.Column="3"/>
                            <Label Text="{Binding Value4}" Grid.Column="4"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
